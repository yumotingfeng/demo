<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.UserDao">
    <select id="getUsers" resultType="com.demo.domain.User">
        select * from user order by id desc limit #{page},#{pageSize}
    </select>
    <insert id="addUser">
        insert into user (
        <if test="id != null">
            id,
        </if>
        name, age
        <if test="leave != null">
            ,leave
        </if>) values (
        <if test="id != null">
            #{id},
        </if>
        #{name}, #{age}
        <if test="leave != null">
            ,#{leave}
        </if>)
    </insert>
    <update id="updateUser">
        update user
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="leave != null">
                leave = #{leave},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteUser">
        delete from user where id = #{id}
    </delete>
    <select id="userCounts" resultType="java.lang.Integer">
        select count(id) from user
    </select>
</mapper>